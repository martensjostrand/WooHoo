<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	
	<display-name>
	      WooHoo!
    </display-name>
    <description>
		A very typical WooHoo service!
	</description>
	
	<servlet>
      <servlet-name>play</servlet-name>
      <description>Sound Player servlet</description>
      <servlet-class>me.marten.woohoo.SoundPlayerServlet</servlet-class>
    </servlet>	

	<servlet-mapping>
    <servlet-name>play</servlet-name>
    <url-pattern>/play</url-pattern>
  </servlet-mapping>
</web-app>
	